{
  "name": "@kami-ui/root",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "type": "module",
  "author": "Hymns Of Web",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "app"
  ],
  "scripts": {
